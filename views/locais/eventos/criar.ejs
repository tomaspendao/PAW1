<!-- Para adicionar Evento-->

<!DOCTYPE html>
<html>
  <head>
    <title>EventosManager</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%-title%></h1>
    <p>Criar Eventos</p>
    <form method="POST">
      <div class="form_div">
        <label for="name">Nome</label>
        <input id="name" name="name" type="text" required placeholder="Nome" />
      </div>
      <div class="form_div">
        <label for="description">Descrição</label>
        <input
          id="description"
          name="description"
          type="text"
          required
          placeholder="descrição do evento"
          spellcheck="true"
        />
      </div>
      <div class="form_div">
        <label for="image">Poster Promocional</label>
        <input id="image" name="image" type="file" />
      </div>
      <div class="form_div">
        <button id="submit">Submeter</button>
      </div>
    </form>
  </body>
</html>
